{
    "name": "vatly/vatly-fluent-php",
    "description": "Framework-agnostic fluent PHP SDK for Vatly billing",
    "keywords": ["vatly", "billing", "subscriptions", "payments"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sander van Hooft",
            "email": "sander@vanhooft.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "vatly/vatly-api-php": "^0.1.0-alpha.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Vatly\\Fluent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vatly\\Fluent\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M",
        "analyze": "@analyse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
